{
   "apiVersion": "apps/v1",
   "kind": "DaemonSet",
   "metadata": {
      "name": "promtail"
   },
   "spec": {
      "template": {
         "spec": {
            "containers": [
               {
                  "args": [
                     "-config.file=/etc/promtail/config/config.yaml"
                  ],
                  "env": [
                     {
                        "name": "HOSTNAME",
                        "valueFrom": {
                           "fieldRef": {
                              "fieldPath": "spec.nodeName"
                           }
                        }
                     }
                  ],
                  "image": "grafana/promtail:1.5.0",
                  "name": "promtail",
                  "ports": [
                     {
                        "containerPort": 80,
                        "name": "http-metrics"
                     }
                  ],
                  "readinessProbe": {
                     "httpGet": {
                        "path": "/ready",
                        "port": 80
                     },
                     "initialDelaySeconds": 10,
                     "timeoutSeconds": 1
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/var/shared",
                        "name": "shared",
                        "readOnly": false
                     },
                     {
                        "mountPath": "/etc/promtail/secrets",
                        "name": "secrets",
                        "readOnly": true
                     },
                     {
                        "mountPath": "/etc/promtail/config",
                        "name": "config",
                        "readOnly": false
                     },
                     {
                        "mountPath": "/var/log",
                        "name": "varlog",
                        "readOnly": true
                     },
                     {
                        "mountPath": "/var/lib/docker/containers",
                        "name": "varlibdockercontainers",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "serviceAccount": "promtail",
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "shared"
               },
               {
                  "name": "secrets",
                  "secret": {
                     "secretName": "promtail"
                  }
               },
               {
                  "configMap": {
                     "items": [
                        ""
                     ],
                     "name": "promtail"
                  },
                  "name": "config"
               },
               {
                  "hostPath": {
                     "path": "/var/log"
                  },
                  "name": "varlog"
               },
               {
                  "hostPath": {
                     "path": "/var/lib/docker/containers"
                  },
                  "name": "varlibdockercontainers"
               }
            ]
         }
      }
   }
}
